class Striker:
    name=""
    color=""
    score=0
    bigchancemiss=0

    def __init__ (self,name,color,score,assist):
        self.name=name
        self.color=color
        self.score=score
        self.assist=assist

    def getName(self):
        return self.name

    def getColor(self):
        return self.color

    def getScore(self):
        return self.score

    def getAssist(self):
        return self.assist

Jackson,Lukaku,Osimhen=None,None,None

Jackson=Striker("N.Jackson","흑인",13,5)
Lukaku=Striker("R.Lukaku","흑인",14,11)
Osimhen=Striker("V.Osimhen","흑인",37,7)

print("%s의 색상은 %s이고 득점은 %d골, 도움은 %d개 입니다."%(Jackson.getName(),Jackson.getColor(),Jackson.getScore(),Jackson.getAssist()))
print("%s의 색상은 %s이고 득점은 %d골, 도움은 %d개 입니다."%(Lukaku.getName(),Lukaku.getColor(),Lukaku.getScore(),Lukaku.getAssist()))
print("%s의 색상은 %s이고 득점은 %d골, 도움은 %d개 입니다."%(Osimehn.getName(),Osimhen.getColor(),Osimhen.getScore(),Osimhen.getAssist()))
