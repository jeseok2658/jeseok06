class Striker:
  color=""
  scoring=0

  def score(self,value):
    self.scoring+=value

  def bigchancmiss(self,value):
    self.bigchancemiss-=value

Nikolas_Jackson=Striker()
Nikolas_Jackson.color="흑인"
Nikolas_Jackson.scoring=0

Romelu_Lukaku=Striker()
Romelu_Lukaku.color="흑인"
Romelu_Lukaku.scoring=0

Victor_Osimhen=Striker()
Victor_Osimhen.color="흑인"
Victor_Osimhen.scoring=0

Nikolas_Jackson.score(13)
print("신슨형의 색상은 %s이며, 현재 득점은 %d골 입니다."%(Nikolas_Jackson.color,Nikolas_Jackson.scoring))

Romelu_Lukaku.score(14)
print("언해피창놈의 색상은 %s이며, 현재 득점은 %d골 입니다.%(Romelu_Lukaku.color,Romelu_Lukaku.scoring))

Victor_Osimhen.score(37)
print("돈벌레유리몸의 색상은 %s이며, 현재 득점은 %d골 입니다.%(Victor_Osimhen.color,Victor_Osimhen.scoring))
